<Window x:Class="EntityFraemworkLesson2.MainAfterLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EntityFraemworkLesson2"
        mc:Ignorable="d"
        Title="MainAfterLogin" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding Path=logined_user.Login, Mode=OneWay}" FontSize="24"></TextBlock>
        <Button Click="Button_Click"> Sign out</Button>
        </StackPanel>
    </Grid>
</Window>
